<!DOCTYPE html>
<html lang="@JG_2017.Resources.Global.ConfigLang">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/Images/favicon.ico" />

    <meta name="author" content="Jones Guidini">
    <meta name="description" content="@JG_2017.Resources.Global.MetaTagsDescription">
    <meta name="keywords" content="@JG_2017.Resources.Global.MetaTagsKeywords">
    <meta name="robots" content="index,follow">
    <meta name="googletbot" content="index,follow">
    <meta http-equiv="content-language" content="@JG_2017.Resources.Global.ConfigLang">
    <meta content='Global' name='distribu'>

    <meta property="og:locale" content="@JG_2017.Resources.Global.ConfigLang">
    <meta property="og:url" content="http://www.jonesguidini.com">
    <meta property="og:title" content="JONES GUIDINI - @ViewBag.TitleHeader">
    <meta property="og:site_name" content="@JG_2017.Resources.Global.MetaTagsSiteName">
    <meta property="og:description" content="@JG_2017.Resources.Global.MetaTagsDescription">
    <meta property="og:image" content="http://www.jonesguidini.com/Content/images/logosnt.jpg">
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:image:width" content="300">
    <meta property="og:image:height" content="243"> 
    <meta property="og:type" content="website">

    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/Content/scripts")*@

    @Styles.Render("~/Content/css/style.css")
    @Styles.Render("~/Content/css/plugins.css")

    @Scripts.Render("~/Content/scripts/jquery.min.js")
    @Scripts.Render("~/Content/scripts/menu_phone.js")

    @RenderSection("imports", required: true)


</head>
<body>
    <!-- HEADER -->
    @if (ViewBag.TitleHeader == "HOME" || ViewBag.TitleHeader == "INICIO")
    {
        @Html.Partial("_Header_home")
    }
    else
    {
        @Html.Partial("_Header")
    }
    
    
    <!-- MAIN -->
    <main>
        <!-- SUB-MENU-PHONE -->
        @Html.Partial("_MenuPhone")

        @RenderBody()

        <!-- SUB-FOOTER -->
        @Html.Partial("_Sub_footer")
    </main>
    <!-- FOOTER -->
    @Html.Partial("_Footer")

